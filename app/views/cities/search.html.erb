<% if @cities.count.to_i > 0 %>
  <br> <br> <br>
  <h1> <%= @cities.first.name %> </h1>

  <hr class = "hor-line">



  <% @cities.first.rooms.each do |e| %>
    <% if e.available == true %>
      <a class = "left-name" href = "/room/<%= e.id %>"> <%= e.name %> </a>
      <br> <br> <br>
      <a href = "/room/<%= e.id %>"> <img class = "center-img" src = "/<%= e.image_src %>" height = "300px" width = "600px"> </a>
      <h2 class = "small-bold">  â‚¹<%= e.price %> per night</h2>
      <br> <br> <br>
      <hr class = "hor-line">
    <% end %>
  <% end %>
<% else %>
  <h1 class = "no-match"> Sorry, no match found. Please search on </h1>
    <div class="search-box">
    <form action="/search" method="GET">
      <input type="text" name="query" id="" placeholder="Where to? ">
      <button type="submit"><span class="fa fa-search"></span></button>
    </form>
  </div>
<% end %>
